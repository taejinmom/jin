<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="ptj_member">
 <insert id="add" parameterType="mvo">
 	insert into member values (member_seq.nextVal,${mem_id},${mem_pw},${mem_name},${mem_jubun},${mem_phone},${mem_adr},sysdate)
 </insert>
 
 <select id="info" parameterType="String" resultType="mvo">
 	select * from member where mem_id = ${id}
 </select>
 
  <select id="totalCount" resultType="int">
 	select count(*) from member
 </select>
 
 <select id="idchk" parameterType="String" resultType="int">
	select count(*) from member where mem_id=#{mem_id}
</select>

<select id="login" parameterType="mvo" resultType="mvo">
	select * from member where mem_id=#{mem_id} and mem_pw=#{mem_pw}
</select>
 </mapper>
 